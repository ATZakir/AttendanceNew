<!DOCTYPE html>
<html ng-app="app" ng-cloak lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet"/>
    @Styles.Render("~/Content/vendorCSS")
    @Styles.Render("~/Content/adminCSS")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        .navbar-brand {
            padding: 0px;
        }
        .navbar-brand>img {
            height: 100%;
            padding: 15px;
            width: auto;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @* @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" }) *@
                <a class="navbar-brand" href="/Home"><img src="~/Content/Images/Logo.png" alt="Sports BD"></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                            <i class="fa fa-user ts-avatar" aria-hidden="true" style="padding: 0 5px;"></i>
                            
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu">
                           
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" style=" margin-top: 50px;">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

@Scripts.Render("~/bundles/mainScripts")
@Scripts.Render("~/bundles/angularScripts")
    @Scripts.Render("~/bundles/appScript")
    @RenderSection("scripts", required: false)
</body>
</html>
